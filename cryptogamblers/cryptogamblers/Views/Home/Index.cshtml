@using cryptoGamblers.Models
@model IEnumerable<ApplicationUser>
@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>ASP.NET</h1>
    <p class="lead">ASP.NET is a free web framework for building great Web sites and Web applications using HTML, CSS and JavaScript.</p>
    @Html.ActionLink("Queue me the fuck up", "QueueMe", "Queue", new { @class = "btn btn-primary"})
</div>

<div class="row">
    <h2>Hall of Winstreak Fame</h2>
    <p>Showing the top 3 users with the highest winstreak</p>
    <table class="table table-striped">
        <tr>
            <th>Username:</th>
            <th>Winstreak:</th>
        </tr>
        @foreach (ApplicationUser user in Model)
        {
            <tr>
                <td>@user.UserName</td>
                <td>@user.WinStreakMax</td>
            </tr>
            
        }
    </table>
</div>