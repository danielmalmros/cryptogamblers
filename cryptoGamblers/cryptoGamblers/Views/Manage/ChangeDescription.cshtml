@model cryptoGamblers.Models.ChangeDescriptionViewModel
@{
    ViewBag.Title = "Change Description";
}
@Html.Partial("MiniJumbotron", "Change Description")

<div class="container body-content">

    <h2>@ViewBag.Title</h2>

    @using (Html.BeginForm("ChangeDescription", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <h4>Change your profile description</h4>
        <hr />
        @Html.ValidationSummary("", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(m => m.ProfileDescription, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextAreaFor(m => m.ProfileDescription, 5, 5, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Change description" class="btn btn-default" />
            </div>
        </div>
    }
</div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
