@model cryptoGamblers.Models.ChangeAvatarViewModel
@{
    ViewBag.Title = "Change Avatar";
}

<div class="container body-content">
    <h2>@ViewBag.Title</h2>

    @using (Html.BeginForm("ChangeAvatar", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form", data_ajax = "false", enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        <h4>Change your avatar</h4>
        <hr />
        @Html.ValidationSummary("", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(m => m.AvatarPath, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.AvatarPath, new { @class = "form-control", type = "file", name = "fileupload" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Change Avatar" class="btn btn-default" />
            </div>
        </div>
    }
</div>



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}