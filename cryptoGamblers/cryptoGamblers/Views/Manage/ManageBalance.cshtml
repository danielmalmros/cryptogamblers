@model cryptoGamblers.Models.ChangeBalanceViewModel
@{
    ViewBag.Title = "Manage Balance";
}

<div class="container body-content">

    <h2>@ViewBag.Title</h2>

    @using (Html.BeginForm("ManageBalance", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <h4>Add more BTC to your balance</h4>
        <hr />
        @Html.ValidationSummary("", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(m => m.AddBalance, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.EditorFor(m => m.AddBalance, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Add to balance" class="btn btn-default" />
            </div>
        </div>
    }
</div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
