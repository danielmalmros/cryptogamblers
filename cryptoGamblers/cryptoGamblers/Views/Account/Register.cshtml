@model cryptoGamblers.Models.RegisterViewModel
@{
	ViewBag.Title = "Register";
	Layout = null;
}
<head>
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Register</title>
@Styles.Render("~/Content/css")
@Scripts.Render("~/bundles/modernizr")
</head>

<div class="bodyContent">
	<div class="loginWrapper">

		@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form", data_ajax = "false", enctype = "multipart/form-data" }))
		{
			<div class="loginForm">
				<div class="loginFormHeader">
					<h1 class="loginFormTitle">Register</h1>
				</div>
				<div class="LoginFormBody">
					@Html.AntiForgeryToken()
					@Html.ValidationSummary("", new { @class = "text-danger" })
					@Html.LabelFor(m => m.Username, new { @class = "control-label" })
					@Html.TextBoxFor(m => m.Username, new { @class = "form-control loginInput" })
					@Html.LabelFor(m => m.Email, new { @class = "control-label" })
					@Html.TextBoxFor(m => m.Email, new { @class = "form-control loginInput" })
					@Html.LabelFor(m => m.Password, new { @class = "control-label" })
					@Html.PasswordFor(m => m.Password, new { @class = "form-control loginInput" })
					@Html.LabelFor(m => m.ConfirmPassword, new { @class = "control-label" })
					@Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control loginInput" })
					<input type="submit" class="btn btn-default loginInput" value="✨ Make me a BitCoin Superstar ✨" />
				</div>
			</div>
		}
	</div>
</div>

@section Scripts {
	@Scripts.Render("~/bundles/jqueryval")
}
