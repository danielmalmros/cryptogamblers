@using cryptoGamblers.Models
@model AdminIndexViewModel
@{
    ViewBag.Title = "Admin Index";
}

<div class="container body-content">
    <h2>Index</h2>
    <p>Yo yo very cool index indeed</p>
    <div class="row">
        <h3>User Roles</h3>
        <table class="table table-striped table-borderless">
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>User Amount</th>
                <th></th>
            </tr>
            @if (Model.AllRoles.Count() == 0)
            {
                <tr><td colspan="4" class="text-center">No Roles</td></tr>
            }
            else
            {
                foreach (var role in Model.AllRoles)
                {
                    <tr>
                        <td>@role.Id</td>
                        <td>@role.Name</td>
                        <td>@role.Users.Count().ToString()</td>
                        <td>
                            @using (Html.BeginForm("DeleteRole", "Admin", new { id = role.Id }))
                    {
                                @Html.ActionLink("Edit", "EditRole", new { id = role.Id }, new { @class = "btn btn-primary btn-xs" })
                                <button class="btn btn-danger btn-xs" type="submit">Delete</button>
                            }
                        </td>

                    </tr>
                }
            }

        </table>
        @Html.ActionLink("Create role", "CreateRole", null, new { @class = "btn btn-primary" })
    </div>
    <br />
    <br />
    <br />
    <div class="row">
        <h3>User Accounts</h3>
        <table class="table table-striped table-borderless">
            <tr>
                <th>ID</th>
                <th>Username</th>
                <th>Email</th>
                <th></th>
            </tr>

            @foreach (var user in Model.AllUsers)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.UserName</td>
                    <td>@user.Email</td>
                    <td>
                        @using (Html.BeginForm("Delete", "Admin", new { id = user.Id }))
                        {
                            @Html.ActionLink("Edit", "Edit", new { id = user.Id }, new { @class = "btn btn-primary btn-xs" })
                            <button class="btn btn-danger btn-xs" type="submit">Delete</button>
                        }
                    </td>
                </tr>
            }

        </table>
        @Html.ActionLink("Create user", "CreateUser", null, new { @class = "btn btn-primary" })


    </div>
    
    
</div>
