@using cryptoGamblers.Models
@model AdminIndexViewModel
@{
    ViewBag.Title = "Admin Index";
}
<div class="jumbotron" style="background-image: url('https://img.buzzfeed.com/buzzfeed-static/static/2014-06/4/11/enhanced/webdr08/anigif_enhanced-buzz-16221-1401896729-17.gif?downsize=715:*&output-format=auto&output-quality=auto');">
    <div class="container body-content">
        <div class="text-center">
            <h2 class="jumbo-title">Admin Index</h2>
        </div>
    </div>
  <div class="top-background"><svg id="Layer_1" data-name="Layer 1" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 699.08 31"><defs><style>.cls-1,.cls-2{fill:#0c131c;}.cls-2{stroke:#f7931a;stroke-miterlimit:10;stroke-width:4px;}</style></defs><title>Untitled-3</title><rect class="cls-1" x="2.41" y="27" width="694" height="4"/><polyline class="cls-2" points="1.41 29.5 28.91 2 670.41 2 697.66 29.25"/></svg></div>
</div>

<div class="container body-content">
    <h2>Index</h2>
    <p>Yo yo very cool index indeed</p>
    <div class="row">
        <h3>User Roles</h3>
        @Html.ActionLink("Create role", "CreateRole", null, new { @class = "btn btn-primary" })
        <table class="table table-striped table-borderless">
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>User Amount</th>
                <th></th>
            </tr>
            @if (Model.AllRoles.Count() == 0)
            {
                <tr><td colspan="4" class="text-center">No Roles</td></tr>
            }
            else
            {
                foreach (var role in Model.AllRoles)
                {
                    <tr>
                        <td>@role.Id</td>
                        <td>@role.Name</td>
                        <td>@role.Users.Count().ToString()</td>
                        <td>
                            @using (Html.BeginForm("DeleteRole", "Admin", new { id = role.Id }))
                    {
                                @Html.ActionLink("Edit", "EditRole", new { id = role.Id }, new { @class = "btn btn-primary btn-xs" })
                                <button class="btn btn-danger btn-xs" type="submit">Delete</button>
                            }
                        </td>

                    </tr>
                }
            }

        </table>
        
    </div>
    <br />
    <br />
    <br />
    <div class="row">
        @using (Html.BeginForm())
        {
            <p>
                Find by username: @Html.TextBox("SearchString")
                <input type="submit" value="Search" />
            </p>
        }
        <h3>User Accounts</h3>
        @Html.ActionLink("Create user", "CreateUser", null, new { @class = "btn btn-primary" })
        <table class="table table-striped table-borderless">
            <tr>
                <th>ID</th>
                <th>Username</th>
                <th>Email</th>
                <th></th>
            </tr>

            @foreach (var user in Model.AllUsers)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.UserName</td>
                    <td>@user.Email</td>
                    <td>
                        @using (Html.BeginForm("Delete", "Admin", new { id = user.Id }))
                        {
                            @Html.ActionLink("Edit", "Edit", new { id = user.Id }, new { @class = "btn btn-primary btn-xs" })
                            <button class="btn btn-danger btn-xs" type="submit">Delete</button>
                        }
                    </td>
                </tr>
            }

        </table>
        


    </div>
    
    
</div>
