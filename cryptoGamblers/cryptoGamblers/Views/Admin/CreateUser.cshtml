@model cryptoGamblers.Models.RegisterViewModel
@{
    ViewBag.Title = "CreateUser";
}



<div class="container body-content">
    <h2>CreateUser</h2>
	

		@using (Html.BeginForm())
		{
			@Html.AntiForgeryToken()
				
			    <h1>Create new user</h1>
				@Html.ValidationSummary("", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(m => m.Username, new { @class = "control-label" })
                    @Html.TextBoxFor(m => m.Username, new { @class = "form-control" })
                </div>
                <div class="form-group">
					@Html.LabelFor(m => m.Email, new { @class = "control-label" })
					@Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                </div>

                <div class="form-group">
					@Html.LabelFor(m => m.Password, new { @class = "control-label" })
					@Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                </div>

                <div class="form-group">
					@Html.LabelFor(m => m.ConfirmPassword, new { @class = "control-label" })
					@Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                </div>

                <div class="form-group">
					@Html.LabelFor(m => m.Avatar, new { @class = "control-label" })
					@Html.TextBoxFor(m => m.Avatar, new { @class = "form-control", type = "file", name = "fileupload" })
				</div>
			    <input type="submit" class="btn btn-primary" value="Create yo" />
                @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-default" })
			
		}
</div>